<Window x:Class="AutoRentalApp.Views.ClientCarsCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог автомобилей — Авто в прокат" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#2196F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="🚗" FontSize="32" Margin="0,0,10,0"/>
                <TextBlock Text="Каталог автомобилей" FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                <Button Content="← Назад" Style="{StaticResource PrimaryButton}" 
                        Click="BackButton_Click" Width="100" Background="#9E9E9E"/>
            </StackPanel>
        </Grid>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" Background="#F5F7FA" CornerRadius="8" Margin="20,10,20,10" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фильтры:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"/>

                <TextBlock Text="Класс:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="ClassFilterComboBox" Width="120" Margin="0,0,15,0" SelectedIndex="0">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="эконом"/>
                    <ComboBoxItem Content="комфорт"/>
                    <ComboBoxItem Content="бизнес"/>
                    <ComboBoxItem Content="премиум"/>
                </ComboBox>

                <TextBlock Text="Цена от:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="PriceFromBox" Width="80" Margin="0,0,10,0" TextChanged="Filter_TextChanged"/>

                <TextBlock Text="до:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="PriceToBox" Width="80" Margin="0,0,15,0" TextChanged="Filter_TextChanged"/>

                <Button Content="Применить" Style="{StaticResource PrimaryButton}" 
                        Click="ApplyFilterButton_Click" Width="100" Height="40"/>

                <Button Content="Сбросить" Style="{StaticResource PrimaryButton}" 
                        Click="ResetFilterButton_Click" Width="100" Height="40" Background="#9E9E9E" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Список автомобилей -->
        <DataGrid Grid.Row="2" x:Name="CarsDataGrid" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="CarsDataGrid_SelectionChanged"
                  RowDetailsVisibilityMode="VisibleWhenSelected" BorderBrush="#E0E0E0" BorderThickness="1"
                  Margin="20,0,20,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Гос. номер" Binding="{Binding PlateNumber}" Width="100"/>
                <DataGridTextColumn Header="Марка" Binding="{Binding Brand}" Width="100"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="100"/>
                <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="70"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" Width="90"/>
                <DataGridTextColumn Header="Класс" Binding="{Binding CarClass}" Width="90"/>
                <DataGridTextColumn Header="Цена/сутки" Binding="{Binding DailyPrice, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="Пробег" Binding="{Binding Mileage}" Width="90"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding CarStatus.StatusName}" Width="120"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="#F5F7FA" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,5,0,5">
                        <StackPanel Margin="10">
                            <TextBlock Text="Подробная информация:" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock><Bold>Тип кузова:</Bold> <TextBlock Text="{Binding BodyType}"/></TextBlock>
                                    <TextBlock><Bold>Двигатель:</Bold> <TextBlock Text="{Binding EngineType}"/></TextBlock>
                                    <TextBlock><Bold>Объём:</Bold> <TextBlock Text="{Binding EngineVolume}"/> л</TextBlock>
                                    <TextBlock><Bold>КПП:</Bold> <TextBlock Text="{Binding TransmissionType}"/></TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock><Bold>VIN:</Bold> <TextBlock Text="{Binding VIN}"/></TextBlock>
                                    <TextBlock><Bold>Последнее ТО:</Bold> <TextBlock Text="{Binding LastServiceDate, StringFormat=d}"/></TextBlock>
                                </StackPanel>

                                <Button Grid.Column="2" Content="Подробнее и арендовать" 
                                        Click="RentCarButton_Click" Tag="{Binding}" 
                                        Style="{StaticResource PrimaryButton}" Width="180" Height="40"
                                        Margin="20,0,0,0" Background="#4CAF50"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Статусная строка -->
        <TextBlock Grid.Row="3" x:Name="StatusText" Text="Загрузка данных..." 
                   Foreground="#757575" HorizontalAlignment="Left" Margin="20,5,0,10" FontSize="13"/>
    </Grid>
</Window>