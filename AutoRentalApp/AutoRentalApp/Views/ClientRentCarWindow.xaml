<Window x:Class="AutoRentalApp.Views.ClientRentCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление аренды — Авто в прокат" Height="751" Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
        <StackPanel>
            <TextBlock Text="Оформление аренды автомобиля" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Информация об автомобиле -->
            <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Выбранный автомобиль:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock x:Name="CarInfoText" FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Даты аренды -->
            <TextBlock Text="Период аренды" FontSize="16" FontWeight="SemiBold" 
                       Foreground="#2196F3" Margin="0,0,0,10"/>

            <TextBlock Text="Дата выдачи *" Style="{StaticResource FormLabel}"/>
            <DatePicker x:Name="StartDatePicker" FontSize="14" Margin="0,4,0,8" Padding="8"/>
            <TextBlock x:Name="StartDateError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Дата возврата *" Style="{StaticResource FormLabel}"/>
            <DatePicker x:Name="EndDatePicker" FontSize="14" Margin="0,4,0,8" Padding="8"/>
            <TextBlock x:Name="EndDateError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <!-- Расчёт стоимости -->
            <TextBlock Text="Расчёт стоимости" FontSize="16" FontWeight="SemiBold" 
                       Foreground="#2196F3" Margin="0,15,0,10"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock><Bold>Цена за сутки:</Bold> <TextBlock x:Name="DailyPriceText"/></TextBlock>
                    <TextBlock><Bold>Количество дней:</Bold> <TextBlock x:Name="DaysCountText"/></TextBlock>
                    <TextBlock><Bold>Итого:</Bold> <TextBlock x:Name="TotalAmountText" FontWeight="Bold" Foreground="#2196F3"/></TextBlock>
                </StackPanel>

                <Button Grid.Column="1" Content="Пересчитать" Click="RecalculateButton_Click" 
                        Style="{StaticResource PrimaryButton}" Width="120" Height="35" Margin="20,0,0,0"/>
            </Grid>

            <!-- Дополнительная информация -->
            <TextBlock Text="Дополнительная информация" FontSize="16" FontWeight="SemiBold" 
                       Foreground="#2196F3" Margin="0,15,0,10"/>

            <TextBlock Text="Комментарий (необязательно):" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="CommentBox" Style="{StaticResource FormTextBox}" FontSize="14" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="ОФОРМИТЬ АРЕНДУ" Style="{StaticResource PrimaryButton}" 
                        Click="ConfirmButton_Click" Width="180" Height="45" Margin="0,0,20,0" Background="#4CAF50"/>
                <Button Content="ОТМЕНА" Background="#9E9E9E" Style="{StaticResource PrimaryButton}" 
                        Click="CancelButton_Click" Width="120" Height="45"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>