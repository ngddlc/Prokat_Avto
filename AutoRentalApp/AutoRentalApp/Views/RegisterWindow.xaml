<Window x:Class="AutoRentalApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация — Авто в прокат" Height="886" Width="541"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2196F3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="📝" FontSize="32" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Создайте аккаунт для доступа к системе" FontSize="12" Foreground="White" Opacity="0.9" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Форма регистрации -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <Border Margin="30" Background="White" CornerRadius="8" Padding="25">
                <StackPanel>
                    <TextBlock Text="Личная информация" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2196F3" Margin="0,0,0,15"/>

                    <TextBlock Text="Фамилия *" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="LastNameBox" Style="{StaticResource FormTextBox}" FontSize="14"/>

                    <TextBlock Text="Имя *" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="FirstNameBox" Style="{StaticResource FormTextBox}" FontSize="14"/>

                    <TextBlock Text="Данные для входа" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2196F3" Margin="0,20,0,15"/>

                    <TextBlock Text="Логин *" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="LoginBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
                    <TextBlock x:Name="LoginErrorText" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,8"/>

                    <TextBlock Text="Пароль *" Style="{StaticResource FormLabel}"/>
                    <PasswordBox x:Name="PasswordBox" FontSize="14" Margin="0,4,0,8" Padding="8" BorderBrush="#BDBDBD" BorderThickness="1"/>
                    <TextBlock x:Name="PasswordErrorText" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,8"/>

                    <TextBlock Text="Подтвердите пароль *" Style="{StaticResource FormLabel}"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" FontSize="14" Margin="0,4,0,8" Padding="8" BorderBrush="#BDBDBD" BorderThickness="1"/>
                    <TextBlock x:Name="ConfirmPasswordErrorText" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,8"/>

                    <TextBlock Text="Роль пользователя" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2196F3" Margin="0,20,0,15"/>

                    <TextBlock Text="Выберите роль *" Style="{StaticResource FormLabel}"/>
                    <!-- ИСПРАВЛЕНО: Убран стиль FormTextBox у ComboBox -->
                    <ComboBox x:Name="RoleComboBox" FontSize="14" Margin="0,4,0,8" Padding="8" SelectedIndex="0">
                        <ComboBoxItem Content="Клиент" Tag="3"/>
                        <ComboBoxItem Content="Менеджер" Tag="2"/>
                        <ComboBoxItem Content="Администратор" Tag="1"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                        <Button Content="ЗАРЕГИСТРИРОВАТЬСЯ" Style="{StaticResource PrimaryButton}" 
                                Click="RegisterButton_Click" Width="200" Height="40" Margin="0,0,10,0"/>
                        <Button Content="ОТМЕНА" Background="#9E9E9E" Style="{StaticResource PrimaryButton}" 
                                Click="CancelButton_Click" Width="100" Height="40"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>