<Window x:Class="AutoRentalApp.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора — Авто в прокат" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#2196F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="🚗" FontSize="32" Margin="0,0,10,0"/>
                <TextBlock Text="Панель администратора" FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock x:Name="UserNameText" FontSize="14" Foreground="White" 
                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                <Button Content="Выйти" Style="{StaticResource PrimaryButton}" 
                        Click="LogoutButton_Click" Background="#FF5252" Width="80"/>
            </StackPanel>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Меню навигации -->
            <Border Grid.Column="0" Background="#F5F7FA" CornerRadius="8" Padding="5">
                <StackPanel>
                    <Button Content="🏠 Главная" Style="{StaticResource PrimaryButton}" 
                            Click="HomeButton_Click" Background="#673AB7" Margin="0,5,0,5" Height="45"/>
                    <Button Content="👥 Клиенты" Style="{StaticResource PrimaryButton}" 
                            Click="ClientsButton_Click" Background="#4CAF50" Margin="0,5,0,5" Height="45"/>
                    <Button Content="🚗 Автомобили" Style="{StaticResource PrimaryButton}" 
                            Click="CarsButton_Click" Background="#2196F3" Margin="0,5,0,5" Height="45"/>
                    <Button Content="👥 Сотрудники" Style="{StaticResource PrimaryButton}" 
                            Click="EmployeesButton_Click" Background="#00BCD4" Margin="0,5,0,5" Height="45"/>
                </StackPanel>
            </Border>

            <!-- Область контента (сюда загружаются UserControl'ы) -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15">
                <ContentControl x:Name="ContentArea" Margin="0,0,0,61"/>
            </Border>
        </Grid>
    </Grid>
</Window>