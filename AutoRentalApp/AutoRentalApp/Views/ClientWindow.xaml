<Window x:Class="AutoRentalApp.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет — Авто в прокат" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#2196F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="👤" FontSize="32" Margin="0,0,10,0"/>
                <TextBlock Text="Личный кабинет" FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock x:Name="UserNameText" FontSize="14" Foreground="White" 
                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                <Button Content="Выйти" Style="{StaticResource PrimaryButton}" 
                        Click="LogoutButton_Click" Background="#FF5252" Width="80"/>
            </StackPanel>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Личная информация -->
            <Border Grid.Column="0" Background="#F5F7FA" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Моя информация" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#2196F3" Margin="0,0,0,15"/>

                    <TextBlock Text="ФИО:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="FullNameText" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Логин:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="LoginText" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Паспорт:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="PassportText" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Вод. удостоверение:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="LicenseText" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Телефон:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="PhoneText" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="EmailText" FontSize="14" Margin="0,0,0,10"/>

                    <Button Content="✏ Редактировать профиль" Style="{StaticResource PrimaryButton}" 
                            Click="EditProfileButton_Click" Width="250" Height="40" 
                            Margin="0,20,0,0" Background="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- Правая панель: История аренды -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="15,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Мои аренды" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                        <Button Content="➕ Новая аренда" Style="{StaticResource PrimaryButton}" 
                                Click="NewRentalButton_Click" Margin="20,0,0,0" 
                                Background="#FF9800" Width="150" Height="35"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="ContractsDataGrid" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" BorderBrush="#E0E0E0" BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ договора" Binding="{Binding ContractNumber}" Width="100"/>
                            <DataGridTextColumn Header="Автомобиль" Binding="{Binding Car.DisplayName}" Width="200"/>
                            <DataGridTextColumn Header="Дата выдачи" Binding="{Binding StartDateTime, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Возврат" Binding="{Binding PlannedEndDateTime, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Факт. возврат" Binding="{Binding ActualEndDateTime, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding ContractStatus.StatusName}" Width="120"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat=N2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>