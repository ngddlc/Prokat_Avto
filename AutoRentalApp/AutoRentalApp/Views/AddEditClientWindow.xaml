<Window x:Class="AutoRentalApp.Views.AddEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="799" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
        <StackPanel>
            <TextBlock x:Name="TitleText" Text="Добавление нового клиента" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Фамилия" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="LastNameBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="LastNameError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Имя" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="FirstNameBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="FirstNameError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Логин" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="LoginBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="LoginError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Пароль" Style="{StaticResource FormLabel}"/>
            <PasswordBox x:Name="PasswordBox" FontSize="14" Margin="0,4,0,8" Padding="8" 
                         BorderBrush="#BDBDBD" BorderThickness="1"/>
            <TextBlock x:Name="PasswordError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Паспорт (0000 000000)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PassportBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="PassportError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Вод. удостоверение (00АА 000000)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="LicenseBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="LicenseError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Телефон (+7 (999) 123-45-67)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PhoneBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="PhoneError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="EmailBox" Style="{StaticResource FormTextBox}" FontSize="14"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="СОХРАНИТЬ" Style="{StaticResource PrimaryButton}" 
                        Click="SaveButton_Click" Width="120" Margin="0,0,10,0"/>
                <Button Content="ОТМЕНА" Background="#9E9E9E" Style="{StaticResource PrimaryButton}" 
                        Click="CancelButton_Click" Width="120"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>