<Window x:Class="AutoRentalApp.Views.AddEditCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автомобиль" Height="960" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
        <StackPanel>
            <TextBlock x:Name="TitleText" Text="Добавление нового автомобиля" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Гос. номер (А123ВС 77)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="PlateNumberBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="PlateNumberError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="VIN (17 символов)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="VINBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="VINError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Марка" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="BrandBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="BrandError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Модель" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="ModelBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="ModelError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Год выпуска" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="YearBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="YearError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Цвет" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="ColorBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="ColorError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Тип кузова" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="BodyTypeBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="BodyTypeError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Тип двигателя" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="EngineTypeBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="EngineTypeError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Объём двигателя (л)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="EngineVolumeBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="EngineVolumeError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Тип КПП" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="TransmissionBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="TransmissionError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Класс автомобиля" Style="{StaticResource FormLabel}"/>
            <ComboBox x:Name="ClassComboBox" FontSize="14" Margin="0,4,0,8" Padding="8" SelectedIndex="0">
                <ComboBoxItem Content="эконом"/>
                <ComboBoxItem Content="комфорт"/>
                <ComboBoxItem Content="бизнес"/>
                <ComboBoxItem Content="премиум"/>
            </ComboBox>

            <TextBlock Text="Цена аренды за сутки (руб)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="DailyPriceBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="DailyPriceError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Текущий пробег (км)" Style="{StaticResource FormLabel}"/>
            <TextBox x:Name="MileageBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
            <TextBlock x:Name="MileageError" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,0"/>

            <TextBlock Text="Статус автомобиля" Style="{StaticResource FormLabel}"/>
            <ComboBox x:Name="StatusComboBox" FontSize="14" Margin="0,4,0,8" Padding="8"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="СОХРАНИТЬ" Style="{StaticResource PrimaryButton}" 
                        Click="SaveButton_Click" Width="120" Margin="0,0,10,0"/>
                <Button Content="ОТМЕНА" Background="#9E9E9E" Style="{StaticResource PrimaryButton}" 
                        Click="CancelButton_Click" Width="120"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>