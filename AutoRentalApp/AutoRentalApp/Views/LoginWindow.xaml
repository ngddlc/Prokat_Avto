<Window x:Class="AutoRentalApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авто в прокат — Вход" Height="712" Width="466"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Grid HorizontalAlignment="Center" Width="466">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2196F3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="🚗" FontSize="36" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Авто в прокат" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Вход в систему" FontSize="14" Foreground="White" Opacity="0.9" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Форма входа -->
        <Border Grid.Row="1" Margin="30,30,30,30" Background="White" CornerRadius="8" Padding="25">
            <StackPanel>
                <TextBlock Text="Добро пожаловать!" FontSize="20" FontWeight="SemiBold" 
                           Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Логин" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="LoginBox" Style="{StaticResource FormTextBox}" FontSize="14"/>
                <TextBlock x:Name="LoginErrorText" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,8"/>

                <TextBlock Text="Пароль" Style="{StaticResource FormLabel}"/>
                <PasswordBox x:Name="PasswordBox" FontSize="14" 
                             Margin="0,4,0,8" Padding="8" BorderBrush="#BDBDBD" BorderThickness="1"/>
                <TextBlock x:Name="PasswordErrorText" Foreground="Red" FontSize="11" Visibility="Collapsed" Margin="0,-8,0,8"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button Content="ВОЙТИ" Style="{StaticResource PrimaryButton}" 
                            Click="LoginButton_Click" Width="150" Height="40" Margin="0,0,10,0"/>
                    <Button Content="РЕГИСТРАЦИЯ" Background="#4CAF50" Style="{StaticResource PrimaryButton}" 
                            Click="RegisterButton_Click" Width="150" Height="40"/>
                </StackPanel>

                <TextBlock Text="Тестовые данные для входа:" FontSize="11" Foreground="#757575" 
                           HorizontalAlignment="Center" Margin="0,20,0,5"/>
                <TextBlock Text="Логин: admin" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
                <TextBlock Text="Пароль: admin123" FontSize="11" Foreground="#757575" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#2196F3">
            <TextBlock Text="© 2026 ООО «Авто в прокат»" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>